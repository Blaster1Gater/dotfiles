client.focused          #426ebc   #2f4f84    #a0b8e6   #5c4e7c
client.focused_inactive #2f3b56   #1a2330    #7a8ca3   #3c4a66
client.unfocused        #1a2330   #1a2330    #5f6c80   #2a3548
client.urgent           #d1697a   #40262a    #e0bfc2   #d1697a
client.placeholder      #2b3444   #1e2633    #7a8da8   #3e4e6b
